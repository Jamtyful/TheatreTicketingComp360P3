<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.ncat.aggies.theatreticketingcomp360p3.BookingController">

    <VBox AnchorPane.topAnchor="0.0" alignment="CENTER">
        <Button text="Back" onAction="#onBack" fx:id="backButton"/>
        <ListView fx:id="showList"/>
    </VBox>

    <HBox AnchorPane.bottomAnchor="0.0" alignment="CENTER">
        <Button text="Reserve Seat" onAction="#onReserveSeat" fx:id="reserveButton"/>
        <Button text="Return Seat" onAction="#onReturnSeat" fx:id="returnButton"/>
    </HBox>

</AnchorPane>
